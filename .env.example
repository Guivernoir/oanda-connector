# OANDA API credentials (get from https://www.oanda.com/account/tpa/personal_token)
OANDA_API_KEY=your_api_key_here
OANDA_ACCOUNT_ID=your_account_id_here

# Use practice account (true) or live trading (false)
OANDA_PRACTICE=true

# Optional: Custom base URL (usually auto-detected)
# OANDA_BASE_URL=https://api-fxpractice.oanda.com

# Optional: Request timeout in seconds (default: 10)
OANDA_TIMEOUT_SECONDS=10

# Optional: Rate limit (default: 100 requests/second)
OANDA_REQUESTS_PER_SECOND=100